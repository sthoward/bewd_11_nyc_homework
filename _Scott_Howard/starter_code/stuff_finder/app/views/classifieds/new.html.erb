<%= form_for @classified do |f| %>
  <fieldset>
    <legend>Classified</legend>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
  </fieldset>
  <%= f.submit %>
<% end %>