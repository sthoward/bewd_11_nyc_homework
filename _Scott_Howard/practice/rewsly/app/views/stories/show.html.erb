<h1><%= @story.title %> -  <%= "Posted by #{@story.user.username}" if @story.user.present?%></h1>
<p><%= link_to @story.link, @story.link %>
<p><%= link_to "Back to home page", root_path %></p>

<%= form_for [@story, @comment] do |f| %>
  <p>
    <%= f.text_area :post, placeholder: "Add a comment...", :rows => 8, :cols => 40 %>
  </p>
  <%= f.submit %>
<% end %>



<ul class="comments">
  <% @story.comments.each do |comment| %>
    <li><%= "#{comment.user.try(:username)} posted: #{comment.post}" %></li>
  <% end %>
</ul>
